<div class="row">
    <div class="col-md-12">
        <h2>{{department.departmentName}} - Department: {{ department.departmentId }}</h2>
        <hr/>
        <form method="post" action="/department/update">
             <input type="hidden" name="departmentId" value="{{department.departmentId}}">
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Department: </label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value = "{{department.departmentName}}">
                        </div>
                    </div>
                </div>
                </div>
            </fieldset>
            <input type="submit" class="btn btn-primary pull-right" value = "Update Department"/>
            <br> <br>
        </form>
    </div>
</div>